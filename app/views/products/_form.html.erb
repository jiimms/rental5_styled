<%= simple_form_for @product, html: {mutipart: true} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel-body">
    <div class ="row">
      <div class ="col col-md-6">
        <div id= "products">
          <%= f.input :category, input_html: {class: "form-control"} %>
          <%= f.label :image, "Add Image"%> <%= f.file_field :image%>
        </div>
      </div>
    
        
      <div class ="col col-md-6">
        <div id= "items">
          <%=f.simple_fields_for :items do |item|%>
            <%= render 'item_fields', f: item%>
            
              <%=link_to_add_association 'Add Item', f, :items, class: "btn btn-default"%>
            
          <%end%>
        </div>
        
        <p class= "submit"><%= f.button :submit,class: "btn btn-primary" %></p>
      
      </div>
      
    </div>
    

  </div>

<% end %>
