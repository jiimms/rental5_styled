<h1>All Items</h1>
<%= render 'items/search'%>
<table>
	<tr>
	<th></th>
	<th class = "item-list-header", width = 200 >Item</th>
	<th class = "item-list-header", width = 180>Brand</th>
	<th class = "item-list-header", width = 100>Price</th>
	<th class = "item-list-header", width = 100>Category</th>
</tr>
<%=will_paginate%>
<%@items.each do |i|%>

<tr class = "items-row">
	<td><%=image_tag i.image.image.url,   class: "item_index_image" %></td>
<td class = "centered item-index-list"><%= i.item_for_rent%></td>
<td class = "centered item-index-list"><%= i.brand%></td>
<td class = "centered item-index-list"><%= i.rental_cost%></td>
<td class = "centered item-index-list"><%= link_to Product.find(i.product_id).category, Product.find(i.product_id)%>
</td>

</tr>
<%end%>
</table>